START
    // Initialize Database
    DEFINE database_users AS List

    PRINT "--- Welcome to Online Flight Booking System ---"
    PRINT "1. Login"
    PRINT "2. Register"
    INPUT user_choice

    IF user_choice EQUALS "2" THEN
        // Registration Process
        PRINT "Enter New Username:"
        INPUT new_username
        PRINT "Enter New Password:"
        INPUT new_password

        IF new_username EXISTS IN database_users THEN
            PRINT "Error: Username already taken."
        ELSE
            STORE new_username AND new_password IN database_users
            PRINT "Registration Successful! Please Login."
            GOTO Login_Section
        ENDIF

    ELSE IF user_choice EQUALS "1" THEN
        // Login Process
        LABEL Login_Section
        PRINT "Enter Username:"
        INPUT input_username
        PRINT "Enter Password:"
        INPUT input_password

        GET user_record FROM database_users WHERE username EQUALS input_username

        IF user_record IS NOT NULL AND user_record.password EQUALS input_password THEN
            PRINT "Login Successful! Loading Dashboard..."
            CALL Display_Dashboard()
        ELSE
            PRINT "Error: Invalid Username or Password."
            PRINT "Access Denied."
        ENDIF

    ELSE
        PRINT "Invalid Selection. Exiting."
    ENDIF
END